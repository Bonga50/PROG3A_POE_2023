@model PROG3A_POE.Models.User

@{
    ViewData["Title"] = "Create";
}


<h1>Create</h1>

<h4>Farmer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">First Name</label>
                <input asp-for="Name" class="form-control" name="txtFirstName" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" name="txtUsername" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" name="txtPassword" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="dropdown my-2 form-group">
                <button asp-for="User_Roles" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" id="dpUserRoles" name="dpRoles">
                    Choose Role
                </button>
                <ul class="dropdown-menu form-group">
                    <li><a class="dropdown-item" asp-for="User_Roles" href="#" onclick="selectRole('Farmer')" >Farmer</a></li>
                    <li><a class="dropdown-item" asp-for="User_Roles" href="#" onclick="selectRole('Employee')" >Employee</a></li>
                </ul>
                <input type="hidden" name="role" id="selectedRole" />
            </div>

            <div>
                <button type="submit" class="btn btn-primary my-2" asp-action="Create">Submit</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllFarmers">Back to List</a>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function selectRole(role) {
            document.getElementById('dpUserRoles').textContent = role;
            document.getElementById('selectedRole').value = role;
        }
    </script>
}
